@model List<PAW3.Web.Models.ViewModels.ProductSummaryViewModel>;

@{
	ViewData["Title"] = "Summary";
}

<div class="summary-card">
	<div class="summary-header">
		<h2><i class="fas fa-chart-bar text-primary-custom me-2"></i>Product Summary</h2>
	</div>
	@if (Model != null)
	{
		<table class="table table-striped table-bordered">			
			@foreach (var summary in Model)
			{
				<tr>
					<td><strong>Id:</strong></td><td>@summary.Id</td>
					<td><strong>Name:</strong></td><td>@summary.Name</td>
					<td><strong>Rating:</strong></td><td>@summary.Rating</td>
					<td><strong>Count:</strong></td><td>@summary.Count</td>
				</tr>
			}			
		</table>
	}
	else
	{
		<div class="alert alert-info" role="alert">
			<i class="fas fa-info-circle me-2"></i>No summary data available.
		</div>
	}
</div>
