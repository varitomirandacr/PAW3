<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PAW3 Enterprise Portal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PAW3.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-cube me-2"></i>PAW3 Enterprise
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-database me-1"></i>Entities
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-controller="Category" asp-action="Index"><i class="fas fa-tags me-2"></i>Categories</a></li>
                                <li><a class="dropdown-item" asp-controller="Component" asp-action="Index"><i class="fas fa-puzzle-piece me-2"></i>Components</a></li>
                                <li><a class="dropdown-item" asp-controller="Inventory" asp-action="Index"><i class="fas fa-warehouse me-2"></i>Inventory</a></li>
                                <li><a class="dropdown-item" asp-controller="Notification" asp-action="Index"><i class="fas fa-bell me-2"></i>Notifications</a></li>
                                <li><a class="dropdown-item" asp-controller="Product" asp-action="Index"><i class="fas fa-box me-2"></i>Products</a></li>
                                <li><a class="dropdown-item" asp-controller="Role" asp-action="Index"><i class="fas fa-user-shield me-2"></i>Roles</a></li>
                                <li><a class="dropdown-item" asp-controller="Supplier" asp-action="Index"><i class="fas fa-truck me-2"></i>Suppliers</a></li>
                                <li><a class="dropdown-item" asp-controller="Task" asp-action="Index"><i class="fas fa-tasks me-2"></i>Tasks</a></li>
                                <li><a class="dropdown-item" asp-controller="User" asp-action="Index"><i class="fas fa-users me-2"></i>Users</a></li>
                                <li><a class="dropdown-item" asp-controller="UserAction" asp-action="Index"><i class="fas fa-user-cog me-2"></i>User Actions</a></li>
                                <li><a class="dropdown-item" asp-controller="UserRole" asp-action="Index"><i class="fas fa-user-tag me-2"></i>User Roles</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-shield-alt me-1"></i>Privacy
                            </a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    &copy; 2025 - PAW3 Enterprise Portal
                </div>
                <div class="col-md-6 text-end">
                    <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
