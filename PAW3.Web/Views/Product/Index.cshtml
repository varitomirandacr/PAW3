@model ProductDtoViewModel

@{
    ViewData["Title"] = "Products";
}

<div class="content-card">
    <div class="page-header">
        <h1><i class="fas fa-box text-primary-custom me-2"></i>Products</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Create New
        </a>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.Error
        </div>
    }

    @if (Model != null && Model.Products.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Products.FirstOrDefault().ProductId)</th>
                        <th>@Html.DisplayNameFor(model => model.Products.FirstOrDefault().ProductName)</th>
                        <th>@Html.DisplayNameFor(model => model.Products.FirstOrDefault().Description)</th>
                        <th>@Html.DisplayNameFor(model => model.Products.FirstOrDefault().Rating)</th>
                        <th>@Html.DisplayNameFor(model => model.Products.FirstOrDefault().CategoryId)</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Products)
                    {
                        <tr>
                            <td><strong>@Html.DisplayFor(modelItem => item.ProductId)</strong></td>
                            <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                            <td>@(item.Description?.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)</td>
                            <td>
                                @if (item.Rating.HasValue)
                                {
                                    <span class="badge bg-warning text-dark">
                                        <i class="fas fa-star me-1"></i>@Html.DisplayFor(modelItem => item.Rating)
                                    </span>
                                }
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.CategoryId)</td>
                            <td class="text-end">
                                <div class="action-buttons">
                                    <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-info btn-sm">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-state-icon">
                <i class="fas fa-box-open"></i>
            </div>
            <h3>No Products Found</h3>
            <p>Get started by creating your first product.</p>
            <a asp-action="Create" class="btn btn-primary mt-3">
                <i class="fas fa-plus me-2"></i>Create Product
            </a>
        </div>
    }
</div>

@{
	await Html.RenderPartialAsync("Partial/Summary", Model?.Summaries ?? []);
}

