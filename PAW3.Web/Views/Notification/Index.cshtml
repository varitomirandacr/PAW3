@model IEnumerable<NotificationViewModel>

@{
    ViewData["Title"] = "Notifications";
}

<div class="content-card">
    <div class="page-header">
        <h1><i class="fas fa-bell text-primary-custom me-2"></i>Notifications</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Create New
        </a>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.Error
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Id)</th>
                        <th>@Html.DisplayNameFor(model => model.UserId)</th>
                        <th>@Html.DisplayNameFor(model => model.Message)</th>
                        <th>@Html.DisplayNameFor(model => model.IsRead)</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@Html.DisplayFor(modelItem => item.Id)</strong></td>
                            <td>@Html.DisplayFor(modelItem => item.UserId)</td>
                            <td>@(item.Message?.Length > 50 ? item.Message.Substring(0, 50) + "..." : item.Message)</td>
                            <td>
                                @if (item.IsRead == true)
                                {
                                    <span class="badge bg-success">Read</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Unread</span>
                                }
                            </td>
                            <td class="text-end">
                                <div class="action-buttons">
                                    <a asp-controller="Notification" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-controller="Notification" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-controller="Notification" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-state-icon">
                <i class="fas fa-bell"></i>
            </div>
            <h3>No Notifications Found</h3>
            <p>Get started by creating your first notification.</p>
            <a asp-action="Create" class="btn btn-primary mt-3">
                <i class="fas fa-plus me-2"></i>Create Notification
            </a>
        </div>
    }
</div>
